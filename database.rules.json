{
  "rules": {
    ".read": "true",
    "reasons": {
      ".indexOn": ["slug"],
      "$reason": {
        // ".write": "auth !== null",
        ".write": "data.child('owner').val() === auth.uid || !data.exists() && newData.child('owner').val() === auth.uid"
      }
    },
    "users": {
      ".read": "true",
      "$uid": {
        // write access only to your own data
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
